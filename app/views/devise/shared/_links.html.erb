<div class="mt-4">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Or log in instead", new_session_path(resource_name), class: "text-muted" %><br />
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Or sign up instead", new_registration_path(resource_name), class: "text-muted" %><br />
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-muted" %><br />
  <% end %>
</div>